{
  "name": "activity-monitor",
  "version": "1.0.0",
  "description": "An Electron app that shows a popup when mouse/keyboard is inactive for 10 seconds",
  "main": "main.js",
  "scripts": {
    "start": "npm run build-css:prod && npx electron .",
    "dev": "npm run build-css:dev && npx electron . --dev",
    "build": "npm run build-css:prod && npx electron-builder",
    "dist": "npm run build-css:prod && npx electron-builder --publish=never",
    "rebuild": "npx electron-rebuild",
    "postinstall": "npx electron-rebuild",
    "build-css": "npm run build-css:prod",
    "build-css:prod": "npx tailwindcss -i ./src/input.css -o ./dist/styles.css --minify",
    "build-css:dev": "npx tailwindcss -i ./src/input.css -o ./dist/styles.css",
    "watch-css": "npx tailwindcss -i ./src/input.css -o ./dist/styles.css --watch"
  },
  "keywords": [
    "electron",
    "mouse",
    "activity",
    "monitor"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "*",
    "electron-builder": "*",
    "electron-rebuild": "*",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  },
  "build": {
    "appId": "com.example.activitymonitor",
    "productName": "Activity Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "settings-renderer.js",
      "index.html",
      "popup.html",
      "settings.html",
      "settings.json",
      "dist/styles.css",
      "icon.png",
      "popup_icon.png"
    ],
    "mac": {
      "icon": "icon.png"
    },
    "win": {
      "icon": "icon.png"
    },
    "linux": {
      "icon": "icon.png"
    }
  },
  "dependencies": {
    "robotjs": "*",
    "node-key-sender": "*"
  }
}
